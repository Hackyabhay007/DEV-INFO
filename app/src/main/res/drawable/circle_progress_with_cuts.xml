<!-- circle_progress_with_cuts.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="12dp"
        android:left="12dp"
        android:right="12dp"
        android:bottom="12dp">
        <shape
            android:innerRadiusRatio="2.5"
            android:shape="ring"
            android:thicknessRatio="26"
            android:useLevel="true">
            <solid android:color="@color/green" /> <!-- Replace with your desired progress color -->
        </shape>
    </item>
    <item
        android:top="0dp"
        android:left="0dp"
        android:right="0dp"
        android:bottom="0dp"
        android:drawable="@drawable/circle_progress_cuts" />
</layer-list>
